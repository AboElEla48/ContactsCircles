<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleItemWhiteText">
        <item name="android:textColor">@color/color_contact_white_text</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="StyleSubItemWhiteText">
        <item name="android:textColor">@color/color_contact_white_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleEmptyListWhiteText">
        <item name="android:textColor">@color/color_contact_white_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleBannerTitleWhiteText">
        <item name="android:textColor">@color/color_contact_title</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/color_contact_title_background</item>
    </style>

    <style name="StyleTitleWithoutBannerWhiteText">
        <item name="android:textColor">@color/color_contact_title</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleBtnWhiteText">
        <item name="android:textColor">@color/color_contact_title</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/one_btn</item>
    </style>

</resources>
