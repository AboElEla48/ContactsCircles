<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fragment_contact_view_phone_item_call_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/fragment_contact_view_phone_item_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_contact_view_phone_item_call_image"
        style="@style/StyleItemWhiteText"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/fragment_contact_view_phone_item_phone_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_contact_view_phone_item_phone_text_view"
        app:layout_constraintStart_toStartOf="@id/fragment_contact_view_phone_item_phone_text_view"
        style="@style/StyleSubItemWhiteText" />

    <ImageView
        android:id="@+id/fragment_contact_view_phone_item_email_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:src="@drawable/email"/>

</android.support.constraint.ConstraintLayout>