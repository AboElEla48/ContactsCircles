<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.aboelela.circles.ui.home.fragments.viewDeviceContacts.DeviceContactsListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_device_contacts_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/fragment_device_contacts_empty_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/txt_empty_device_contacts_text"
        android:visibility="gone"/>

</FrameLayout>
