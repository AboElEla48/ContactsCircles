<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.contacts.view.ContactViewerFragment">

    <ImageView
        android:id="@+id/fragment_contact_viewer_image_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/fragment_content_view_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_contact_viewer_image_view"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/fragment_content_view_actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_content_view_name_text_view"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/fragment_content_view_actions_call"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/call"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/fragment_content_view_actions_sms"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/sms"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/fragment_content_view_actions_email"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/email"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_content_view_phones_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_content_view_actions_layout"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/fragment_content_view_emails_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_content_view_phones_layout"
        android:orientation="vertical"/>

</android.support.constraint.ConstraintLayout>